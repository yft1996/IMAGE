unset(IMAGE_INCLUDE_DIRS)
unset(IMAGE_LIBS)
unset(IMAGE_LIBRARY)
unset(IMAGE_LIBRARIES)

set(IMAGE_INCLUDE_DIRS "/usr/local/include")
find_library(IMAGE_LIBS
    NAMES image
    HINTS "/usr/local/lib/IMAGE" NO_DEFAULT_PATH)
set(IMAGE_LIBRARY_DIRS "/usr/local/lib/IMAGE")
set(IMAGE_FOUND TRUE)

set(IMAGE_LIBRARY_DIR ${IMAGE_LIBRARY_DIRS})
